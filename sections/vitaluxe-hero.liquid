<!-- Vita Luxe custom hero -->
{%- style -%}
  .vitaluxe-hero{
    padding: 5rem 0;

    {% if section.settings.hero_background_color != blank %}
      background: {{ section.settings.hero_background_color }};
    {% endif %}
  }
{%- endstyle -%}

<div class="page-width">
  <div class="vitaluxe-hero-content">
    <div class="vitaluxe-hero-content-block">
      <img height="500" width="500" src="{{ 'hero-text.png' | asset_url }}" alt="">
    </div>

    <div class="vitaluxe-hero-content-block">
      <img height="500" width="500" src="{{ 'hero-products.png' | asset_url }}" alt="">
    </div>

    {% for block in section.blocks %}
      {% case block.type %}
          <!-- hero text image -->
        {% when 'hero_text_image' %}
          {% if block.settings.hero_text_image1 != blank %}
            <div {{ block.shopify_attributes }}>
              <img
                height=""
                width=""
                src="{{ block.settings.hero_text_image1 | image_url }}"
                alt="VitaLuxe Vitamins"
              >
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "VitaLuxe hero",
  "tag": "section",
  "class": "vitaluxe-hero",
  "settings": [
    {
      "type": "color",
      "id": "hero_background_color",
      "label": "Hero background color",
      "default": "#1e1e1e"
    }
  ],
  "blocks": [
    {
      "type": "hero_text_image",
      "name": "Hero text image",
      "settings": [
        {
          "type": "image_picker",
          "id": "hero_text_image1",
          "label": "Hero text image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "VitaLuxe hero"
    }
  ]
}
{% endschema %}
